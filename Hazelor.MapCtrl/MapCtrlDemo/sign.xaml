<UserControl x:Class="MapCtrlDemo.sign"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" >
    <Grid Height="45" Width="30" Margin="-15,-45,0,0" Visibility="Visible">
        <Path Fill="#CC575B57" Stroke="{x:Null}" StrokeThickness="0" Stretch="Uniform" SnapsToDevicePixels="True" Margin="0,4,0,-4"
                  Data="M9.885,0 C15.344,0 19.77,4.425 19.77,9.884 19.77,12.65655 18.316221,15.912833 16.329014,18.923011 14.402801,21.840796 11.975403,24.527351 9.885,26.318 5.76,22.68 0,15.344 0,9.884 0,4.425 4.425,0 9.885,0" RenderTransformOrigin="0.5,1">
            <Path.Effect>
                <BlurEffect Radius="20"/>
            </Path.Effect>
            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.7"/>
                    <SkewTransform/>
                    <RotateTransform Angle="59.534"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Path.RenderTransform>
        </Path>
        <Path Fill="#FF34D63B" Stroke="#C222" StrokeThickness="2" Stretch="Uniform" SnapsToDevicePixels="True" Margin="0,4,0,-4"
                  Data="M9.885,0 C15.344,0 19.77,4.425 19.77,9.884 19.77,12.65655 18.316221,15.912833 16.329014,18.923011 14.402801,21.840796 11.975403,24.527351 9.885,26.318 5.76,22.68 0,15.344 0,9.884 0,4.425 4.425,0 9.885,0">
        </Path>
        <TextBlock Foreground="#FFF" FontFamily="Consolas" FontSize="18" Margin="0,0,0,6" HorizontalAlignment="Center" VerticalAlignment="Center"
                       IsHitTestVisible="False" x:Name="TextIndex" Text="{Binding Index}">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="3" Color="#C222" ShadowDepth="2" />
            </TextBlock.Effect>
        </TextBlock>

    </Grid>
</UserControl>
